@model Nodo.Models.Login
@{
    Session["urlHttp"] = HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[0] + "//" + HttpContext.Current.Request.Url.AbsoluteUri.Split('/')[2];
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutLimitLogin.cshtml";
}
@section css{
}<!-- Content area -->
<div class="content d-flex justify-content-center align-items-center">
    <!-- Password recovery form -->
    <form class="login-form" action="@Url.Action("SendPasswordRecovery")"  method="post"> 
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">
                    <i class="icon-spinner11 icon-2x border-3 rounded-round p-3 mb-3 mt-1" style="color:#002171; border-color:#002171"></i>
                    <h5 class="mb-0">Recuperar contraseña</h5>
                </div>

                <div class="form-group form-group-feedback form-group-feedback-left">
                    <div class="form-control-feedback">
                        <i class="icon-mail5 text-muted"></i>
                    </div>
                    <input type="email" class="form-control" name="usuario" placeholder="Ingresa correo electrónico">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn bg-blue btn-block btn-sm" style="background-color:#002171"><i class="icon-spinner11 mr-2"></i> Restablecer contraseña</button>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("Index")" style="color:#5472d3">Ingresar a la aplicación</a>
                </div>
            </div>
        </div>
    </form>
    <!-- /password recovery form -->
</div>
<!-- /content area -->

@section scriptsTop{
    <script type="text/javascript">

    </script>
}
@section scriptsButtom{
    @if (Session["message"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                type: '@Session["type"]',
                //title: 'Session["title"]',
                html: '@Session["message"]',
                showConfirmButton: false,
                timer: 3000
            })
        </script>
        Session.Remove("type");
        Session.Remove("message");
    }
    <script type="text/javascript">

    </script>
}