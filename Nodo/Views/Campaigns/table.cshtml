@section scriptsButtom{
    @if (Session["message"] != null)
    {
<script type="text/javascript">
            Swal.fire({
              icon: '@Session["type"]',
              title: '@Session["title"]',
              html: '@Session["message"]',
                showConfirmButton: false,
                timer: 2000
            })
</script>Session.Remove("type");
                    Session.Remove("title");
                    Session.Remove("message");
                }
    <script type="text/javascript">
        var eventon = true;
    $(document).ready(function () {
        $("#tableCampaign").DataTable({
            destroy: true,
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json'
            }
        });
        $(".changeActivityCampaign").select2({
            placeholder: "Seleccione",
            minimumResultsForSearch: -1
        });
        $(document).on("change", ".changeActivityCampaign", function () {
            var obj = $(this);
            var idActiAnte = $(this).data("idactivity")
            var href = $(this).data("href");
            var vidval = $(this).val();
            if (eventon) {

                Swal.fire({
                    title: "¿Esta Seguro?",
                    html: "De querer cambiar la condicion de esta campaña",
                    icon: 'question',
                    showCancelButton: true,
                    reverseButtons: false,
                    confirmButtonText: 'Aceptar',
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#21618C',
                    cancelButtonColor: '#666666',
                    allowOutsideClick: false,
                }).then((result) => {
                    if (result.value) {
                        $.ajax({
                            type: 'post',
                            url: href,
                            timeout: 0,
                            data: { value: vidval },
                            beforeSend: function (resp) {
                            },
                            success: function (data) {
                                data = JSON.parse(data)[0];
                                if (data.idActivityCampaign == vidval) {
                                    toastr.success('Información modificada con éxito', 'Bien');
                                    obj.data("idactivity", vidval);
                                    //if (vidval == 4)
                                        location.reload();
                                }
                                else {
                                    eventon = false;
                                    obj.val(idActiAnte).trigger("change");
                                    eventon = true;
                                    toastr.warning("No se pudo cambiar la opción, intentelo nuevamente en un momento, si persiste, contacte al administrador", "Problema", { timeOut: 2000 })
                                }
                            },
                            error: function (data) {
                                eventon = false;
                                obj.val(idActiAnte).trigger("change");
                                eventon = true;
                                toastr.error("Hubo un problema, contacte al administrador", "Error", { timeOut: 2000 })
                            }
                        });
                    }
                    else {
                        eventon = false;
                        obj.val(idActiAnte).trigger("change");
                        eventon = true;
                    }
                });
            }
        });
        $(document).on("click", ".modalshowTable", function () {
            var href = $(this).data("href");
            var vmodal = $(this).data("idmodal");
            var namCamp = $(this).data("namecampaign");
            var vidcampa = $(this).data("idcampaign");
            $("#" + $("#" + vmodal).data("table")).DataTable().destroy();
            $("#" + $("#" + vmodal).data("table")).children("tbody").html("");
            $(".nameCampaignTable").html(namCamp);
            $.ajax({
                type: 'get',
                url: href,
                timeout: 0,
                beforeSend: function () {
                },
                success: function (data) {
                    data = $.parseJSON(data)
                    console.log(data);
                    if (data != undefined) {
                        $.each(data, function (index, item) {
                            var vms = "";
                            var vname = "";
                            var vimage = "";
                            var vnumprof = "";
                            var vidrow = "";
                            var vhref = "";
                            var vcheck = "";
                            if ($("#" + vmodal).data("ids") == 1) {
                                vname = item.firstName + ' ' + item.lastName;
                                vimage = item.srcImage;
                                vnumprof = item.nameprofile;
                                vidrow = item.idEmployee;
                                vhref = '@Url.Action("storeCampaignEmployee")';
                                if (item.idEmployeeCampaign != null)
                                    vcheck = "checked";
                            }
                            else {
                                vname = item.name;
                                vimage = item.srcImage;
                                vnumprof = '(' + item.codePhone + ') ' + item.phoneNumber;
                                vidrow = item.idClient;
                                vhref = '@Url.Action("storeCampaignClient")';
                                if (item.idClientCampaign != null)
                                    vcheck = "checked";
                            }
                            vms += '<tr>';
                            vms += '<td>';
                            vms += '<div class="d-flex align-items-center">';
                            vms += '<div class="mr-3">';
                            vms += '<a href="' + vimage + '" target="_blank">';
                            vms += '<img src="' + vimage + '" class="rounded-circle" width="32" height="32" alt="' + vname + '">';
                            vms += '</a>';
                            vms += '</div>';
                            vms += '<div>';
                            vms += '<a class="text-default font-weight-semibold text-uppercase">' + vname + '</a>';
                            vms += '</div>';
                            vms += '</div>';
                            vms += '</td>';
                            vms += '<td>' + vnumprof + '</td>';
                            vms += '<td><input type="checkbox" ' + vcheck + ' data-idcampaign="' + vidcampa+'" value="' + vidrow + '" data-href="' + vhref + '" class="selectedrow" style="width:25px !important;height:25px !important" /></td>';
                            vms += '</tr>';
                            $("#" + $("#" + vmodal).data("table")).children("tbody").append(vms)
                        })
                    }
                    $("#" + $("#" + vmodal).data("table")).DataTable({
                        destroy: true,
                        language: {
                            url: 'https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json'
                        }
                    });
                }
            });
            $("#" + vmodal).modal("show");
        });
        $(document).on("click", ".selectedrow", function () {
            var vidrow = $(this).val();
            var vidcampaign = $(this).data("idcampaign");
            var href = $(this).data("href");
            var obj = $(this);
            $.ajax({
                type: 'get',
                url: href,
                timeout: 0,
                data: { idcampaign:vidcampaign, idrow : vidrow},
                beforeSend: function () {
                    obj.addClass("spinner");
                },
                success: function (data) {
                    obj.removeClass("spinner");
                    data = $.parseJSON(data)[0]
                    if (data.respuesta == 1)
                        toastr.success('Operación realizada con éxito', { timeOut: 1000 });
                    else {
                        toastr.error("Hubo un problema, contacte al administrador", "Error", { timeOut: 2000 })
                        obj.prop("checked", false);
                    }
                },
                error: function () {
                    obj.removeClass("spinner");
                    obj.prop("checked", false);
                    toastr.error("Hubo un problema, contacte al administrador", "Error", { timeOut: 2000 })
                }
            });
        });
        $(".editCamp").click(function () {
            var hrefs = $(this).data("href")
            var text = $(this).data("text")
            var obj = $(this);
            Swal.fire({
                title: "¿Deseas editar esta Campaña?",
                html: text,
                icon: 'question',
                showCancelButton: true,
                reverseButtons: false,
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#21618C',
                cancelButtonColor: '#666666',
            }).then((result) => {
                if (result.value) {
                    location.replace(hrefs)
                }
            });
        })
        $(".editCampNewWindow").click(function () {
            var hrefs = $(this).data("href")
            var text = $(this).data("text")
            var obj = $(this);
            Swal.fire({
                title: "¿Esta Seguro?",
                html: text,
                icon: 'question',
                showCancelButton: true,
                reverseButtons: false,
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cancelar',
                confirmButtonColor: '#21618C',
                cancelButtonColor: '#666666',
            }).then((result) => {
                if (result.value)
                    window.open(hrefs, "_blank");
            });
        })
        
    })

    </script>
}