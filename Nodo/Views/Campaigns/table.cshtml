<div class="card">
    <div class="card-header header-elements-inline">
        <h6 class="card-title">Lista de campañas</h6>
        @*<div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>*@
    </div>
    <div class="card-body">
        <div class="">
            <table id="tableCampaign" class="table table-sm table-responsive-sm w-100">
                <thead style="background-color:#21618C;color:white">
                    <tr>
                        <th class="">Nombre</th>
                        <th class="">Teléfono</th>
                        <th class="">N° clientes</th>
                        <th class="">Finalización</th>
                        <th class="text-center">Codición</th>
                        @*<th class="text-center">Estado</th>*@
                        <th class="text-center">Operación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rows in ViewBag.row)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @*<div class="mr-3">
                                            <a href="@rows["SrcImage"]" target="_blank">
                                                <img src="@rows["srcImage"]" class="rounded-circle" width="32" height="32" alt="">
                                            </a>
                                        </div>*@
                                    <div>
                                        <a class="text-default font-weight-semibold text-uppercase">
                                            @rows["name"]
                                        </a>
                                        @*<div class="text-muted font-size-sm"><span class="badge badge-mark border-danger mr-1"></span>Teléfono - rows["phoneMobile"]</div>*@
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@rows["phoneNumber"]</td>
                            <td class="text-center">@rows["cantClients"]</td>
                            <td class="text-center">
                                @if (rows["dateEnd"].ToString() != "")
                                {
                                    ViewBag.name = DateTime.Parse(rows["dateEnd"].ToString()).ToString("dd-MM-yyyy");
                                    <span>@ViewBag.name</span>
                                }
                                else
                                {
                                    <span>No tiene</span>
                                }
                            </td>
                            <td class="text-center">
                                @{ 
                                    ViewBag.name = "disabled";
                                    if (Convert.ToInt32(Session["idProfile"]) == 1)
                                    {
                                        ViewBag.name = "";
                                    }
                                }
                                <select name="jnjn" @ViewBag.name class="form-control form-control-sm changeActivityCampaign "
                                        data-idactivity="@Convert.ToInt32(rows["idActivityCampaign"])"
                                        data-href="@Url.Action("ChangeActivityCampaign",new {id =rows["idCampaigns"] })"
                                        style="width:100px">
                                    @foreach (dynamic rowAc in ViewBag.rowActivityCampa)
                                    {
                                        if (Convert.ToInt32(rows["idActivityCampaign"]) == Convert.ToInt32(rowAc["idActivityCampaign"]))
                                        {
                                            <option selected value="@rowAc["idActivityCampaign"]">@rowAc["name"]</option> 
                                        }
                                        else
                                        {
                                            <option value="@rowAc["idActivityCampaign"]">@rowAc["name"]</option>
                                        }
                                    }
                                </select>
                            </td>
                            @*<td class="text-center">@rows["nameStatus"]</td>*@
                            <td class="text-center">
                                @if (Convert.ToInt32(rows["cantClients"]) > 0)
                                {
                                    <a class="btn btn-sm  mt-1 mb-1 cursor-pointer editCampNewWindow"
                                       data-href="@Url.Action("ReportCampaign",new {id =rows["idCampaigns"] })"
                                       data-text="De ver el reporte de esta campaña"
                                       title="Ver Reporte" style="border-color:#5472d3;">
                                        <i class="icon-stats-bars"></i>
                                    </a>
                                }
                                @if (Convert.ToInt32(rows["idActivityCampaign"]) == 4 && Convert.ToInt32(rows["cantClients"]) > 0)
                                {
                                    <a class="btn btn-sm  mt-1 mb-1 cursor-pointer editCampNewWindow"
                                       data-href="@Url.Action("Backup",new {id =rows["idCampaigns"] })"
                                       data-text="De ver el backup de esta campaña"
                                       title="Ver Backup" style="border-color:#5472d3;">
                                        <i class="icon-database-export"></i>
                                    </a>
                                }
                            
                                @if (Convert.ToInt32(Session["idProfile"]) == 1)
                                {
                                    <a class="btn btn-sm  mt-1 mb-1 cursor-pointer editCamp"
                                       data-href="@Url.Action("Edit",new {id =rows["idCampaigns"] })"
                                       data-text=""
                                       title="Editar campaña" style="border-color:#5472d3;">
                                        <i class="icon-pencil5"></i>
                                    </a>
                                    <a class="btn btn-sm  mt-1 mb-1 cursor-pointer modalshowTable"
                                       data-href="@Url.Action("getEmployeeCampaign",new {id =rows["idCampaigns"] })"
                                       data-idmodal="tableUsersAso"
                                       data-namecampaign="@rows["name"]"
                                       data-idcampaign="@rows["idCampaigns"]"
                                       title="Mostrar tabla de usuarios" style="border-color:#5472d3;">
                                        <i class="icon-users4"></i>
                                    </a>
                                    <a class="btn btn-sm  mt-1 mb-1 cursor-pointer modalshowTable"
                                       data-href="@Url.Action("getClientsCampaign",new {id =rows["idCampaigns"] })"
                                       data-idmodal="tableClientAso"
                                       data-namecampaign="@rows["name"]"
                                       data-idcampaign="@rows["idCampaigns"]"
                                       title="Mostrar tabla de clientes" style="border-color:#5472d3;">
                                        <i class="icon-user-plus"></i>
                                    </a>
                                
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

